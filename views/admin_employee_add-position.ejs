<link rel="stylesheet" href="/css/add-simple-db.css">
<div id="add-position">
    <div id="heading">
        <div id="turn-back-btn">
            <a href="/admin/category/employee/position-list"><i class="fa-solid fa-arrow-left-long"></i> Thoát</a>
        </div>
        <div id="title">
            <% if (isUpdating) { %>
                <span>Cập nhật loại chức vụ</span>
            <% } else { %>
                <span>Thêm loại chức vụ</span>
            <% } %>
        </div>
    </div>
    <form method="POST" onsubmit="return submitFormCancellation"
    action="/api/admin/<%= isUpdating ? 'update-position/' + specifiedPosition._id.toString() : 'add-position'%>">
        <div class="form_text-input more-condition" id="position">
            <label for="position">Loại chức vụ</label>
            <input class="adjust-upper-and-lower-case" value="<%= isUpdating ? specifiedPosition.position : '' %>"
            <% if (isUpdating) { %>readonly<% } %>
            name="position" type="text" placeholder="VD: Phó giám đốc,..." required>
            <div class="form_text-input_err-message"></div>
        </div>
        <div class="form_text-input more-condition" id="salary_per_day">
            <label for="salary_per_day">Lương cơ bản một ngày (VNĐ)</label>
            <input value="<%= isUpdating ? specifiedPosition.salary_per_day : '' %>"
            name="salary_per_day" type="number" placeholder="VD: 500000,..." required>
            <div class="form_text-input_err-message"></div>
        </div>
        <input type="submit" value="Xác nhận">
    </form>
</div>
<script src="/js/employee_add-position.js"></script>
