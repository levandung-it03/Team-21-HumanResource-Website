<link rel="stylesheet" href="/css/contract_contract-type.css">
<div id="contract-type">
    <div id="heading">
        <div class="hide" id="turn-back-btn">
            <a><i class="fa-solid fa-arrow-left-long"></i> Thoát</a>
        </div>
        <div id="title">
            <span>Danh sách loại hợp đồng</span>
        </div>
        <div id="add-btn">
            <a href="/admin/category/contract/add-contract-type">Thêm loại hợp đồng</a>
        </div>
        <div id="search">
            <input class="search" type="text" placeholder="Tìm kiếm">
            <i class="fa-solid fa-magnifying-glass"></i>
        </div>
    </div>
    <table>
        <thead>
            <tr class="table_title">
                <th id="ordinal">
                    <span class="title_name">STT</span>
                        <i class="fa-solid fa-arrow-down-short-wide" id="ordinal"></i>      
                </th>
                <th id="contract_type_code">
                    <span class="title_name">Mã loại hợp đồng</span>
                    <i class="fa-solid fa-arrow-down-short-wide" id="contract_type_code"></i>
                </th>
                <th id="contract_type">
                    <span class="title_name">Tên loại hợp đồng</span>
                    <i class="fa-solid fa-arrow-down-short-wide" id="contract_type"></i>
                </th>
                <th id="description">
                    <span class="title_name">Mô tả</span>
                </th>
                <th id="dateCreated">
                    <span class="title_name">Ngày tạo</span>
                    <i class="fa-solid fa-arrow-down-short-wide" id="dateCreated"></i>
                </th>
                <th id="update-contract_type">
                    <span class="title_name">Sửa</span>
                </th>
                <th id="delete-contract_type">
                    <span class="title_name">Xoá</span>
                </th>
            </tr>
        </thead>
        <tbody>
            <% for (var i = 0; i < allContractType.length; i++) { %>
                <tr class="body" id=<%= i+1 %>>
                    <td id="ordinal"><%= (i + 1) %></td>
                    <td class="body_enable-searching body_enable-sorting"
                        id="contract_type_code"><%= allContractType[i].contract_type_code %></td>
                    <td class="body_enable-searching body_enable-sorting"
                        id="contract_type"><%= allContractType[i].contract_type %></td>
                    <td class="body_enable-searching body_enable-sorting"
                        id="description"><%= allContractType[i].description %></td>
                    <td class="body_enable-searching body_enable-sorting"
                        id="dateCreated"><%= allContractType[i].dateCreated %></td>
                    <td class="update-contract_type">
                        <a href="/admin/category/contract/update-contract-type/<%= allContractType[i]._id.toString() %>">
                            <i class="fa-sharp fa-solid fa-pencil"></i></a>
                    </td>
                    <td class="delete-contract_type">
                        <a contract_type_id=<%= allContractType[i]._id.toString() %>><i class="fa-sharp fa-solid fa-trash"></i></a>
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>
<script src="/js/contract_contract-type.js"></script>